@model StaffManager.Models.CompanyModel

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Company" : "Edit Company";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="@(Model.Id == 0 ? "Create" : "Update")" method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="mb-3">
        <label for="LegalForm" class="form-label">Legal Form</label>
        <select class="form-select" id="CompanyId" name="CompanyId">
            @foreach (var company in (IEnumerable<SelectListItem>)ViewBag.Companies)
            {
            <option value="@company.Value" @(company.Selected ? "selected" : "")>@company.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>