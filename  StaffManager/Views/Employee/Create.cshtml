@using StaffManager.Models
@model StaffManager.Models.EmployeeModel
@{
ViewData["Title"] = Model.Id == 0 ? "Create Employee" : "Edit Employee";
}

<h1>@ViewData["Title"]</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MiddleName"></label>
        <input asp-for="MiddleName" class="form-control" />
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Position"></label>
        <select asp-for="Position" class="form-select">
            <option value="0">-- Select Position --</option>
            @foreach (var position in Enum.GetValues<Position>().Cast<Position>().Where(p => p != Position.None))
            {
            <option value="@((int)position)">@position</option>
            }
        </select>
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CompanyId" class="form-label"></label>
        <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.Companies"></select>
        <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>



    <div class="mb-3">
        <label asp-for="HireDate"></label>
        <input asp-for="HireDate" type="date" class="form-control" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
