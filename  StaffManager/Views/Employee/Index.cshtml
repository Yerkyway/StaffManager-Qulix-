@model IEnumerable<StaffManager.Models.EmployeeModel>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>
<a class="btn btn-primary mb-3" href="/Employee/Create">Add New Employee</a>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Company</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.FirstName @employee.LastName</td>
            <td>@employee.Position</td>
            <td>@employee.Company.Name</td>
            <td>
                <a class="btn btn-sm btn-warning" href="/Employee/Update/@employee.Id">Edit</a>
                <a class="btn btn-sm btn-danger" href="/Employee/Delete/@employee.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>